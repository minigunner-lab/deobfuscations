local function notify(n, c, i, t)
    n = n or "GGH52Lan"
    c = c or "text"
    i = i or "rbxassetid://14260295451"
    t = t or 5
    OrionLib:MakeNotification({
        Name = n,
        Content = c,
        Image = i,
        Time = t
    })
    OrionLib:Init()
end

